@model List<KnowledgeHubPortal.Domain.Entities.Category>

	@* <h1>Category Count: @Model.Count</h1>  *@
    
    <a class="btn btn-primary" asp-action="Add"  asp-controller="Categories">Add New Category</a>

    <table class="table">
    <thead>
        <tr>
            <th>Category ID</th>
            <th>Category Name</th>
            <th>Description</th>
            <th>Action</th>
            
        </tr>
    </thead>
    <tbody>
        @foreach (var category in Model)
        {
                <tr>
                    <td>@category.CateoryId</td>
                    <td>@category.CategoryName</td>
                    <td>@category.CategoryDescription</td>
                    <td><a class="btn btn-primary" asp-action="Edit" asp-route-id="@category.CateoryId" asp-controller="Categories">Edit</a> | 
                             <a asp-action="Delete" asp-controller="Categories" asp-route-id="@category.CateoryId"
                           class="btn btn-danger" 
                           onclick="return confirm('Are you sure you want to delete this item?')">Delete</a>
                </tr>
        }
    </tbody>
</table>

